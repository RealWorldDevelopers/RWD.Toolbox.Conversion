<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets>

    <!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->

    <!--
    Write events to a file with the date in the filename.
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}" />
    -->

    <target name="errFile" 
            xsi:type="File" 
            fileName="${basedir}/logs/logfile.txt"
            archiveFileName="${basedir}/archives/log.{#####}.txt"
            archiveAboveSize="102400"
            archiveNumbering="Sequence"
            concurrentWrites="true"
            layout="${newline}Timestamp:${longdate}${newline}Level:${level}${newline}Application:${processname:fullName=true}${newline}LoggerObject:${logger}${newline}Notes:${message}${newline}ErrorMessage:${exception:format=Message}${newline}ExceptionType:${exception:format=Type}${newline}Source:${callsite}${newline}Method:${exception:format=Method}${newline}StackTrace:${exception:format=StackTrace}${newline}${exception:format=Data}${newline}${newline}FullString:${exception:format=tostring}${newline}"
            encoding="utf-8"/>

  <target name="logFile"
        xsi:type="File"
        fileName="${basedir}/logs/logfile.txt"
        archiveFileName="${basedir}/archives/log.{#####}.txt"
        archiveAboveSize="102400"
        archiveNumbering="Sequence"
        concurrentWrites="true"
        layout="${newline}Timestamp:${longdate}${newline}Level:${level}${newline}Application:${processname:fullName=true}${newline}LoggerObject:${logger}${newline}Source:${callsite}${newline}Notes:${message}"
        encoding="utf-8"/>
  </targets>

  <rules>
    <!-- add your logging rules here -->

    <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->

    <logger name="*" minlevel="Error"  writeTo="errFile"/>
    <logger name="*" maxlevel="Warn"  writeTo="logFile"/>
    
  </rules>
  
  
</nlog>
